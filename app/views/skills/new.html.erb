<div class="row">
  <div class="col-sm-12">
    <%= form_for @skill do |f| %>
      <div class="field col-sm-6">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>

      <div class="field col-sm-6">
        <%= f.label :classification, "Type" %><br />
        <%= f.select(:classification, @types.map { |value| [ value, value ] }) %>
      </div>

      <div class="field col-sm-6">
        <%= f.label :description %><br />
        <%= f.text_area :description %>
      </div>

      <%= f.submit "Create", class: "btn" %>

    <% end %>
  </div>
</div>